@{
    Layout = "~/Views/Shared/_LDoctor.cshtml";
}

@model eUseControl.Models.UserData

<div class="container wow fadeInUp" data-wow-delay="0.1s" style="position:fixed; left:  700px; top: 185px;">
    <h2 class="text-primary text-uppercase">Ближайшие записи</h2>
    @foreach (var item in Model.Appointment)
    {
        <div class="row row-striped">
            <div class="col-2 text-right">
                <h1 class="display-4"><span class="badge badge-secondary">10</span></h1>
                <h2>@item[0]</h2>
            </div>
            <div class="col-10">
                <h3 class="text-uppercase"><strong>Консультация</strong></h3>
                <ul class="list-inline">
                    <li class="list-inline-item text-white"><i class="fa fa-calendar-o" aria-hidden="true"></i> @item[1]</li>
                    <li class="list-inline-item text-white"><i class="fa fa-clock-o" aria-hidden="true"></i> @item[2]</li>
                    <li class="list-inline-item text-white"><i class="fa fa-location-arrow" aria-hidden="true"></i> Кабинет @item[3]</li>
                </ul>
                <a class="btn btn-light mt-3" href="">Отклонить</a>
                <a class="btn btn-light mt-3" href="">Прниять</a>
            </div>
        </div>
    }

</div>

<!-- Information Start-->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-5">
                <div class="section-title mb-4">
                    <h2 class="position-relative d-inline-block text-primary text-uppercase">Профиль</h2>
                    <h6 class="display-6 mb-0"><small><small><small><small>Имя: @Model.FirstName</small></small></small></small></h6>
                    <h6 class="display-6 mb-0"><small><small><small><small>Фамилия: @Model.LastName</small></small></small></small></h6>
                </div>

                <div class="col-lg-4 wow zoomIn" data-wow-delay="0.3s">
                    <div class="bg-white d-flex flex-column p-1" style="height: 300px; width: 400px;">
                        <h3 class="text-lg-center mb-3">Просмотр записей по дате</h3>
                        <div class="date mb-3" id="date" data-target-input="nearest">
                            <input type="text" class="form-control bg-light border-0 datetimepicker-input"
                                   placeholder="Дата" data-target="#date" data-toggle="datetimepicker" style="height: 40px;">
                            <!--Information End-->
                            <!-- Appointment table Start-->
                        </div>
                        <div class="time" id="time1" data-target-input="nearest">
                            <input type="text"
                                   class="form-control bg-light border-0 datetimepicker-input"
                                   placeholder="Выберите время" data-target="#time1" data-toggle="datetimepicker" style="height: 40px;">
                        </div>
                        <a class="btn btn-light mt-3" href="">Готово</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Appointment table End-->
