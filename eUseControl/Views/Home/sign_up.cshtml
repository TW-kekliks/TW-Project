<!DOCTYPE html>
<html lang="en">

<head>
    @Html.Partial("_Header")
</head>

<body>
    <!-- Spinner Start -->
    @Html.Partial("_Spinner")
    <!-- Spinner End -->
    <!-- Topbar Start -->
    @Html.Partial("_Topbar")
    <!-- Topbar End -->
    <!-- Navbar Start -->
    @Html.Partial("_navbar")
    <!-- Navbar End -->
    <!-- Full Screen Search Start -->
    @Html.Partial("_Search")
    <!-- Full Screen Search End -->
    <!-- Hero Start -->
    <div class="container-fluid bg-primary py-5 hero-header mb-5">
        <div class="row py-3">
            <div class="col-12 text-center">
                <h1 class="display-3 text-white animated zoomIn"> Регистрация</h1>
                <a href="" class="h4 text-white">На главную</a>


            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!-- Contact Start -->
    <div class="container-fluid py-5">
        <div class="container">
            <div class="row g-5">
                <div class="col-xl-4 col-lg-6 wow slideInUp" data-wow-delay="0.1s">

                </div>
                <div class="col-xl-4 col-lg-6 wow slideInUp" data-wow-delay="0.3s">
                    <form>
                        <div class="row g-3">

                            <div class="col-12">
                                <input type="text" class="form-control border-0 bg-light px-4" placeholder="Ваше имя" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                <input type="email" class="form-control border-0 bg-light px-4" placeholder="Ваша фамилия" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                <input type="text" class="form-control border-0 bg-light px-4" placeholder="Номер телефона" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                <input type="text" class="form-control border-0 bg-light px-4" placeholder="Ваш email" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Регистрация</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-xl-4 col-lg-12 wow slideInUp" data-wow-delay="0.6s">

                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
    <!-- Newsletter Start -->
    @Html.Partial("_Newsletter")
    <!-- Newsletter End -->
    <!-- Footer Start -->
    @Html.Partial("_Footer")
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"><i class="bi bi-arrow-up"></i></a>




    <!-- Template Javascript -->
    @Html.Partial("_Js")
</body>

</html>