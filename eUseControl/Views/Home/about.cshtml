<!DOCTYPE html>
<html lang="en">

<head>
    @Html.Partial("_Header")
</head>

<body>
    <!-- Spinner Start -->
    @Html.Partial("_Spinner")
    <!-- Spinner End -->
    <!-- Topbar Start -->
    @Html.Partial("_Topbar")
    <!-- Topbar End -->
    <!-- Navbar Start -->
    @Html.Partial("_Navbar")
    <!-- Navbar End -->
    <!-- Full Screen Search Start -->
    @Html.Partial("_Search")
    <!-- Full Screen Search End -->
    <!-- Hero Start -->
    <div class="container-fluid bg-primary py-5 hero-header mb-5">
        <div class="row py-3">
            <div class="col-12 text-center">
                <h1 class="display-3 text-white animated zoomIn">О нас</h1>
                <a href="@Url.Action("Index", "Home")" class="h4 text-white">Начальная страница</a>
                <i class="far fa-circle text-white px-2"></i>

            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!-- About Start -->
    <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-7">
                    <div class="section-title mb-4">
                        <h5 class="position-relative d-inline-block text-primary text-uppercase">О НАС</h5>
                        <h1 class="display-5 mb-0">Лучшая в Молдове офтальмологическая клиника, которой можно доверять</h1>
                    </div>
                    <h4 class="text-body fst-italic mb-4">Искусство возвращать зрение.</h4>
                    <p class="mb-4">Наша цель - здоровье ваших глаз! Каждый может видеть лучше с нашей «Точкой Зрения».</p>
                    <div class="row g-3">
                        <div class="col-sm-6 wow zoomIn" data-wow-delay="0.3s">
                            <h5 class="mb-3"><i class="fa fa-check-circle text-primary me-3"></i> Лучшие специалисты </h5>
                            <h5 class="mb-3"><i class="fa fa-check-circle text-primary me-3"></i> Многолетний стаж </h5>
                        </div>
                        <div class="col-sm-6 wow zoomIn" data-wow-delay="0.6s">
                            <h5 class="mb-3"><i class="fa fa-check-circle text-primary me-3"></i>24/7 Открыты</h5>
                            <h5 class="mb-3"><i class="fa fa-check-circle text-primary me-3"></i>Справедливые цены</h5>
                        </div>
                    </div>
                    <a href="appointment.html" class="btn btn-primary py-3 px-5 mt-4 wow zoomIn" data-wow-delay="0.6s">Сделать запись</a>
                </div>
                <div class="col-lg-5" style="min-height: 500px;">
                    <div class="position-relative h-100">
                        <img class="position-absolute w-100 h-100 rounded wow zoomIn" data-wow-delay="0.9s" src="~/img/about.jpg" style="object-fit: cover;">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
    @Html.Partial("_Newsletter")

    @Html.Partial("_Footer")

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"><i class="bi bi-arrow-up"></i></a>


    @Html.Partial("_Js")
</body>

</html>